{
  "name": "gkevinb",
  "version": "0.1.0",
  "description": "Github.io page of Gabor Kevin Barta",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-staging": "vue-cli-service build --mode staging",
    "lint": "vue-cli-service lint",
    "copy-dist": "copyfiles 'dist/**/*' './' -u 1",
    "clean": "rimraf dist css database files img js index.html 404.html favicon.ico",
    "minify-json": "minify-json dist/database",
    "deploy": "npm run clean && npm run build && npm run minify-json && npm run copy-dist",
    "deploy-gh": "npm run deploy && git checkout master && git add -A && git commit -m ':rocket: Deploy to Github pages' && git push origin master",
    "docker-start": "npm run build-staging && docker-compose up -d --build && open http://localhost:5000",
    "docker-stop": "docker-compose down"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gkevinb/gkevinb.github.io.git"
  },
  "author": "Gabor Kevin Barta",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gkevinb/gkevinb.github.io/issues"
  },
  "homepage": "https://gkevinb.github.io/",
  "dependencies": {
    "axios": "^0.19.2",
    "core-js": "^2.6.11",
    "hamburgers": "^1.1.3",
    "hanzi-writer": "^2.2.2",
    "highlight.js": "^9.18.1",
    "howler": "^2.1.3",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1",
    "vue": "^2.6.11",
    "vue-gtag": "^1.6.2"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^4.2.3",
    "babel-eslint": "^10.1.0",
    "bootstrap": "^4.4.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.13.1",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
